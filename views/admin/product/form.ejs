<% if (productRecord && productRecord.id) { %>
    <form id="productForm" method="POST" action="/admin/product/update/<%= productRecord.id %>">
<% } else { %>
    <form id="productForm" method="POST" action="/admin/product/create">
<% } %>
        <div class="form-group row">

            <label class="col-sm-2 col-form-label">Product Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="productName" value="<% if (productRecord.productName) { %><%= productRecord.productName %><% } %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="price" value="<% if (productRecord.price) { %><%= productRecord.price %><% } %>">
            </div>
        </div>

        <div class="hr-line-dashed"></div>
        <div class="form-group row">
            <div class="col-sm-4 col-sm-offset-2">
                <a href="/admin/product" class="btn btn-white btn-sm">Cancel</a>
                <button class="btn btn-primary btn-sm" type="submit">Save changes</button>
            </div>
        </div>
    </form>
    <% if(req.session.flash) { %>
      <script type="text/javascript">
        $(document).ready(function() {
          toastrDisplay("<%= req.session.flash.type %>", "<%= req.session.flash.message %>");
        });
      </script>
      <% req.session.flash = {}; %> <% }%>
      <script>
        $(document).ready(function() {

          var validator = $("#productForm").validate({
            rules: {
              productName: { required: true },
              price: {
                required: true,

              }
            },
            messages: {
              productName: { required: "product Name is required" },
              price: { required: "price is required" },
            },
          });
        });

      </script>
