<% block('title', 'Login'); %>
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name"><%= sails.config.shortName %></h1>

        </div>
        <h3>Welcome to <%= sails.config.siteName %></h3>
        <p>Lorem ipsum.
            <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
        </p>
        <p>Login in. To see it in action.</p>
        <form class="m-t"  method="POST" action="/admin/login">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Username" required="" name="email">
            </div>
